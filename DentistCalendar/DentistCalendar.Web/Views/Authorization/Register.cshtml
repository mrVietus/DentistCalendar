@model DentistCalendar.Web.Models.Authorization.RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}

@if (!ViewData.ModelState.IsValid)
{
    <div asp-validation-summary="All" class="col-xl-12 alert alert-danger alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<link rel="stylesheet" href="~/css/register.css" />

<div class="dc-register-sheet flex-fill">
    <div class="registration">
        <div class="col-xl-6 left"></div>
        <div class="col-xl-6 right d-flex justify-content-end">
            <div class="card card-signup col-md-6">
                <h2 class="card-title text-center">Register</h2>
                <div class="card-body d-flex justify-content-center">
                    <div class="row">
                        <form id="registerForm" class="form d-flex justify-content-center" method="post" action="">
                            <div class="form-group has-default">
                                <div class="form-group has-default">
                                    <div class="row justify-content-center">
                                        <select asp-for="AccountType" class="selectpicker" data-size="3" data-style="btn btn-gradient btn-round" title="Wybierz typ konta">
                                            <option value="4" selected class="hidden"></option>
                                            <option value="1">Właściciel gabinetu</option>
                                            <option value="2">Dentysta</option>
                                            <option value="3">Pacjent</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group has-default">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">mail</i>
                                            </span>
                                        </div>
                                        <input type="email" asp-for="Email" id="inputEmail" class="form-control" placeholder="Email...">
                                    </div>
                                </div>
                                <div class="form-group has-default">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                        </div>
                                        <input type="password" asp-for="Password" id="inputPassword" placeholder="Hasło..." class="form-control">
                                    </div>
                                </div>
                                <div class="form-group has-default">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                        </div>
                                        <input type="password" asp-for="RepeatPassword" id="inputRepeatPassword" placeholder="Powtórz hasło..." class="form-control">
                                    </div>
                                </div>
                                <div class="form-check">
                                    <label asp-for="AgreeTermsAndConditions" class="form-check-label">
                                        <input asp-for="AgreeTermsAndConditions" type="checkbox" class="form-check-input" value="@Model.AgreeTermsAndConditions">
                                        <span class="form-check-sign">
                                            <span class="check"></span>
                                        </span>
                                        I agree to the
                                        <a asp-area="" asp-controller="Home" asp-action="TermsAndConditions">terms and conditions</a>
                                    </label>
                                </div>
                                <div class="text-center">
                                    <button class="btn btn-gradient btn-round mt-4" type="submit">
                                        <i class="material-icons">create</i> Zarejestruj
                                    </button>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#registerForm').on('change', 'input[type=checkbox]', function () {
            this.checked ? this.value = 'True' : this.value = 'False';
        });
    });
</script>

